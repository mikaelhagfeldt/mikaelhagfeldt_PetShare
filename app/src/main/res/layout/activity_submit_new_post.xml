<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mikael.mikaelhagfeldt_petshare.SubmitNewPostActivity">

    <ImageButton
        android:id="@+id/id_addpost_imageButton"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@android:drawable/ic_menu_gallery"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="84dp"
        android:layout_margin="7dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"/>

    <EditText
        android:id="@+id/id_addpost_editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="209dp"
        android:background="@drawable/outline"
        android:ems="10"
        android:hint="Post Title . . ."
        android:inputType="textPersonName"
        android:padding="15dp"/>

    <EditText
        android:id="@+id/id_addpost_editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="139dp"
        android:background="@drawable/outline"
        android:ems="10"
        android:hint="Post Description . . ."
        android:inputType="textPersonName"
        android:padding="15dp"/>

    <Button
        android:id="@+id/id_addpost_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp"
        android:text="Add Post"/>

</RelativeLayout>
