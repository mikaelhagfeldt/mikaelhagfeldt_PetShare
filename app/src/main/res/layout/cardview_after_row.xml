<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_cardviewafterrow_linearlayout"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/id_cardviewafterrow_imageView"
            android:src="@drawable/ic_launcher_background"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            android:padding="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Enter Title . . ."
            android:textStyle="bold"
            android:id="@+id/id_cardviewafterrow_textView1"
            android:padding="7dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:text="Enter Description . . ."
            android:id="@+id/id_cardviewafterrow_textView2"
            android:padding="7dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Created: "
            android:textStyle="italic"
            android:id="@+id/id_cardviewafterrow_textView3"
            android:padding="7dp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
